{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DDS.PRTF",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dds.prtf",
					"match": "(((?i)^[\\s]{0,5}[\\s\\S]))(\\*).*"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.dds.prtf.andor",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{0}))(?i)(A|O)"
                },
                {
                    "name": "constant.language.dds.prtf.n01",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{1}))(?i)(N|\\s)[0-9]{2}"
                },
                {
                    "name": "constant.language.dds.prtf.n02",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{4}))(?i)(N|\\s)[0-9]{2}"
                },
                {
                    "name": "constant.language.dds.prtf.n03",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{7}))(?i)(N|\\s)[0-9]{2}"
                }, 
                {
                    "name": "constant.language.dds.prtf.nameType",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{10}))(?i)(R)"
                },
                {
                    "name": "constant.language.dds.prtf.ref",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{22}))(?i)(R)"
                },
                {
                    "name": "constant.language.dds.prtf.len",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{23}))[0-9|\\s]{5}"
                },
                {
                    "name": "constant.language.dds.prtf.dataType",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{28}))(?i)(A|F|G|L|O|S|T|Z)"
                },
                {
                    "name": "constant.language.dds.prtf.decpos",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{29}))[0-9|\\s]{2}"
                },
                {
                    "name": "constant.language.dds.prtf.usage",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{31}))(?i)(O)"
                },
                {
                    "name": "constant.language.dds.prtf.locline",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{32}))([0-9]|\\s|\\+){3}"
                },
                {
                    "name": "constant.language.dds.prtf.locpos",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{35}))([0-9]|\\s|\\+){3}"
                },
                {
                    "name": "constant.numeric.dds.prtf",
                    "match": "\\b([0-9]+)\\b"
                }
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.dds.prtf.spec",
					"match": "(^[\\s]{5}[A|a])"
				},
				{
					"name": "keyword.operator.dds.prtf",
					"match": "\\+"
				},
                {
                    "name": "keyword.other.dds.prtf.func", 
                    "match": "((?i)(C(A|F)))[0-9]{2}"
                },
				{
					"name": "keyword.other.dds.prtf.funcs",
					"match": "(?i)(ZFOLD|UNISCRIPT|UNDERLINE|TXTRTT|TRNSPY|TIMSEP|TIMFMT|TIME|TEXT|STRPAGGRP|STAPLE|SPACEB|SPACEA|SKIPB|SKIPA|RELPOS|REFFLD|REF|PRTQLTY|POSITION|PAGSEG|PAGRTT|PAGNBR|OVERLAY|OUTBIN|MSGCON|LPI|LINE|INVMMAP|INVDTAMAP|INDTXT|INDARA|HIGHLIGHT|GDF|FORCE|FONTNAME|FONT|FNTCHRSET|FLTPCN|FLTFIXDEC|ENDPAGGRP|ENDPAGE|EDTWRD|EDTCDE|DUPLEX|DTASTMCMD|DRAWER|DOCIDXTAG|DLTEDT|DFT|DFNCHR|DATSEP|DATFMT|DATE|CVTDTA|CPI|COLOR|CHRSIZ|CHRID|CDEFNT|BOX|BLKFOLD|BARCODE|ALIAS|AFPRSC)"
                }
			]
		},
		"strings": {
			"name": "string.quoted.single.dds.prtf",
			"begin": "'",
			"end": "(')",
			"patterns": [
				{
					"name": "constant.character.escape.dds.prtf",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dds.prtf"
}