{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DDS.PF",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dds.pf",
					"match": "(((?i)^[\\s]{0,5}[\\s\\S]))(\\*).*"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.dds.pf.nametype",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{10}))(?i)(R|K)"
				},
				{
					"name": "constant.language.dds.pf.ref",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{22}))(?i)(R)"
				},
				{
					"name": "constant.language.dds.pf.len",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{23}))(?i)[0-9|\\s]{5}"
				},
				{
					"name": "constant.language.dds.pf.datatype",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{28}))(?i)(P|S|B|F|A|L|T|Z|H|J|E|O|G|5)"
				},
				{
					"name": "constant.language.dds.pf.decpos",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{29}))(?i)[0-9|\\s]{2}"
				},
				{
					"name": "constant.language.dds.pf.use",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{31}))(?i)(B)"
				},
                {
                    "name": "constant.numeric.dds.pf",
                    "match": "(\\b[0-9]+)|([0-9]*[.][0-9]*)"
                }
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.dds.pf.spec",
					"match": "(^[\\s]{5}[A|a])"
				},
				{
					"name": "keyword.operator.dds.pf",
					"match": "\\+"
				},
				{
					"name": "keyword.other.dds.pf.funcs",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{38}))(?i)(ZONE|VARLEN|VALUES|UNSIGNED|UNIQUE|TIMSEP|TIMFMT|TEXT|REFSHIFT|REFFLD|REF|RANGE|NOALTSEQ|LIFO|FORMAT|FLTPCN|FIFO|FCFO|EDTCDE|EDTWRD|DIGIT|DFT|DESCEND|DATSEP|DATFMT|COMP|COLHDG|CMP|CHKMSGID|CHECK|CCSID|ALWNULL|ALTSEQ|ALIAS|ABSVAL)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.single.dds.pf",
			"begin": "'",
			"end": "(\n|')",
			"patterns": [
				{
					"name": "constant.character.escape.dds.pf",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dds.pf"
}