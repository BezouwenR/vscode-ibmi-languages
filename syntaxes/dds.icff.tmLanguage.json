{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DDS.ICFF",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dds.icff",
					"match": "(((?i)^[\\s]{0,5}[\\s\\S]))(\\*).*"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.dds.icff.andor",
					"match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{0}))(?i)(A|O)"
                },
                {
                    "name": "constant.language.dds.icff.n01",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{1}))(?i)(N|\\s)[0-9]{2}"
                },
                {
                    "name": "constant.language.dds.icff.n02",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{4}))(?i)(N|\\s)[0-9]{2}"
                },
                {
                    "name": "constant.language.dds.icff.n03",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{7}))(?i)(N|\\s)[0-9]{2}"
                }, 
                {
                    "name": "constant.language.dds.icff.nameType",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{10}))(?i)(R|H)"
                },
                {
                    "name": "constant.language.dds.icff.ref",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{22}))(?i)(R)"
                },
                {
                    "name": "constant.language.dds.icff.len",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{23}))[0-9|\\s]{5}"
                },
                {
                    "name": "constant.language.dds.icff.dataType",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{28}))(?i)(P|S|B|F|A|O)"
                },
                {
                    "name": "constant.language.dds.icff.decpos",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{29}))[0-9|\\s]{2}"
                },
                {
                    "name": "constant.language.dds.icff.usage",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{31}))(?i)(B|P)"
                },
                {
                    "name": "constant.language.dds.icff.locline",
                    "match": "(?<=((?<=^[\\s]{5}[A|a|\\s])[\\s\\S]{32}))([0-9]|\\s){3}"
                },
                {
                    "name": "constant.numeric.dds.icff",
                    "match": "\\b([0-9]+)\\b"
                }
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.dds.icff.spec",
					"match": "(^[\\s]{5}[A|a])"
				},
				{
					"name": "keyword.operator.dds.icff",
					"match": "\\+"
				},
                {
                    "name": "keyword.other.dds.icff.func", 
                    "match": "((?i)(C(A|F)))[0-9]{2}"
                },
				{
					"name": "keyword.other.dds.icff.funcs",
					"match": "(?i)(VARLEN|VARBUFMGT|TNSSYNLVL|TIMER|TEXT|SYNLVL|SUBDEV|SECURITY|RSPCONFIRM|RQSWRT|REFFLD|REF|RECID|RCVTRNDRND|RCVTKCMT|RCVROLLB|RCVNEGRSP|RCVFMH|RCVFAIL|RCVENDGRP|RCVDETACH|RCVCTLDTA|RCVCONFIRM|RCVCANCEL|PRPCMT|NEGRSP|INVITE|INDTXT|INDARA|FRCDTA|FMTNAME|FMH|FLTPCN|FAIL|EVOKE|EOS|ENDGRP|DFREVOKE|DETACH|CTLDTA|CONFIRM|CNLINVITE|CANCEL|ALWWRT|ALIAS)"
                },
                {
                    "name": "keyword.other.dds.icff.funcs",
                    "match": "\\b(?i)(CMP|CLRL|SFL)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.single.dds.icff",
			"begin": "'",
			"end": "(')",
			"patterns": [
				{
					"name": "constant.character.escape.dds.icff",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dds.icff"
}